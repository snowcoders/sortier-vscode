{
  "activationEvents": [
    "*"
  ],
  "bugs": {
    "url": "https://github.com/snowcoders/sortier-vscode/issues"
  },
  "categories": [
    "Formatters"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Sortier",
        "command": "sortier.run",
        "title": "Run"
      }
    ],
    "configuration": [
      {
        "properties": {
          "sortier.onSave": {
            "default": false,
            "description": "Runs sortier on save",
            "type": "boolean"
          }
        },
        "title": "Sortier"
      }
    ]
  },
  "dependencies": {
    "@snowcoders/sortier": "3.3.0",
    "cosmiconfig": "7.0.1",
    "ts-node": "10.2.1",
    "typescript": "4.4.3"
  },
  "description": "Visual Studio Code extension for Sortier",
  "devDependencies": {
    "@snowcoders/renovate-config": "2.0.3",
    "@types/chai": "4.2.21",
    "@types/cosmiconfig": "5.0.3",
    "@types/estree": "0.0.50",
    "@types/mocha": "9.0.0",
    "@types/node": "16.9.1",
    "chai": "4.3.4",
    "husky": "5.1.3",
    "lint-staged": "11.1.2",
    "mocha": "9.1.1",
    "prettier": "2.4.1",
    "vsce": "1.88.0",
    "vscode": "1.1.37"
  },
  "displayName": "Sortier",
  "engines": {
    "vscode": "^1.18.0"
  },
  "homepage": "https://github.com/snowcoders/sortier-vscode",
  "license": "MIT",
  "main": "./out/extension",
  "name": "sortier-vscode",
  "publisher": "Snowcoders",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcoders/sortier-vscode.git"
  },
  "scripts": {
    "build": "npm run compile",
    "compile": "tsc -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vsce": "vsce",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -watch -p ./"
  },
  "version": "1.3.1"
}
