{
  "name": "sortier-vscode",
  "displayName": "Sortier",
  "description": "Visual Studio Code extension for Sortier",
  "version": "1.1.2",
  "license": "MIT",
  "publisher": "Snowcoders",
  "engines": {
    "vscode": "^1.18.0"
  },
  "bugs": {
    "url": "https://github.com/snowcoders/sortier-vscode/issues"
  },
  "homepage": "https://github.com/snowcoders/sortier-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcoders/sortier-vscode.git"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "sortier.run",
        "category": "Sortier",
        "title": "Run"
      }
    ],
    "configuration": [
      {
        "title": "Sortier",
        "properties": {
          "sortier.onSave": {
            "type": "boolean",
            "default": false,
            "description": "Runs sortier on save"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vsce": "vsce"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/cosmiconfig": "5.0.3",
    "@types/mocha": "5.2.5",
    "@types/node": "7.10.2",
    "chai": "4.2.0",
    "mocha": "5.2.0",
    "vscode": "1.1.21",
    "vsce": "1.53.0"
  },
  "dependencies": {
    "@snowcoders/sortier": "2.2.0",
    "typescript": "3.1.6",
    "cosmiconfig": "5.0.7",
    "ts-node": "7.0.1"
  }
}
