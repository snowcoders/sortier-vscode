{
  "activationEvents": [
    "onStartupFinished"
  ],
  "bugs": {
    "url": "https://github.com/sortier/sortier-vscode/issues"
  },
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "category": "Sortier",
        "command": "sortier.run",
        "title": "Run"
      }
    ],
    "configuration": {
      "properties": {
        "sortier.onSave": {
          "default": false,
          "description": "Runs sortier on save",
          "type": "boolean"
        }
      },
      "title": "Sortier",
      "type": "object"
    }
  },
  "dependencies": {
    "@types/node": "^16.11.12",
    "typescript": "^4.0.0"
  },
  "description": "Code sorting via sortier",
  "devDependencies": {
    "@snowcoders/renovate-config": "2.0.3",
    "@types/estree": "0.0.50",
    "@types/vscode": "1.63.1",
    "esbuild": "0.14.10",
    "husky": "7.0.4",
    "lint-staged": "12.1.5",
    "prettier": "2.5.1",
    "rimraf": "3.0.2",
    "sortier": "1.0.1",
    "vsce": "2.6.2"
  },
  "displayName": "Sortier - Code sorter",
  "engines": {
    "vscode": "^1.60.0"
  },
  "homepage": "https://github.com/snowcoders/sortier-vscode",
  "keywords": [
    "sortier",
    "sort",
    "sorter",
    "sorting"
  ],
  "license": "MIT",
  "main": "./dist/extension",
  "name": "sortier-vscode",
  "publisher": "Snowcoders",
  "repository": {
    "type": "git",
    "url": "https://github.com/snowcoders/sortier-vscode.git"
  },
  "scripts": {
    "build": "npm run clean && npm run build:base -- --sourcemap",
    "build:base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --external:typescript --format=cjs --platform=node",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky install",
    "test": "echo test",
    "vsce": "vsce",
    "vscode:prepublish": "npm run build -- --minify",
    "watch": "npm run build:base -- --sourcemap --watch"
  },
  "version": "2.0.3"
}
